@model RolesVM

<form method="post">
    <input asp-for="@Model.User.Id" hidden />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-success bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Role manager</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">

            <div class="border p-2 rounder">

                <div class="form-group">
                    <label class="col-12">User Name</label>
                    <div class="col-md-12">
                        <input asp-for="User.Name" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-12">User Email</label>
                    <div class="col-md-12">
                        <input asp-for="User.Email" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group mt-3 p-2 border rounded">
                    <span>Roles Assignment</span>
                    @for (int i = 0; i < Model.RolesList.Count; i++)
                    {
                        <div class="m-2 form-check">
                            <input asp-for="@Model.RolesList[i].RoleName" hidden />
                            <input asp-for="@Model.RolesList[i].IsSelected" class="form-check-input" />
                            <label class="form-check" asp-for="@Model.RolesList[i].IsSelected">
                                @Model.RolesList[i].RoleName
                            </label>
                        </div>
                    }
                </div>

                <div class="form-group pt-3 row">
                    <div class="col-md-6">
                        <a class="btn btn-secondary form-control" asp-controller="User" asp-action="Index">Return to list</a>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-outline-success form-control" value="Update" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>