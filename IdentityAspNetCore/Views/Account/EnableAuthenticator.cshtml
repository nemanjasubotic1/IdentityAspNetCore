@model TwoFactorAuthenticationVM

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Enable Authenticator</h1>
    <form method="post">
        <div class="border p-2 rounder">
            <p class="text-center">Please enter the code below in your authenticator Application</p>
            <p class="text-center">@Model.Token</p>

            <p class="text-center">
                Alternatively you can scan QRCode with your phone.
            </p>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <h3 class="text-center offset-3" id="qrCode"></h3>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/qrcode.js"></script>

    <script type="text/javascript">
        new QRCode(document.getElementById("qrCode"), "@Model.QrCodeUrl");
    </script>
}